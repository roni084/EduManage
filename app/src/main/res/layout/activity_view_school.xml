<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/tv_school_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="School Name:  "
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_school_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="School Code:      "
        android:textSize="20sp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_school_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Category:            "
        android:textSize="20sp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_school_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Address:             "
        android:textSize="20sp"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_total_teachers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Teachers: "
        android:textSize="20sp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black" />

    <TextView
        android:id="@+id/tv_total_students"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Students:  "
        android:textSize="20sp"
        android:layout_marginBottom="8dp"
        android:textColor="@android:color/black" />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="14sp"
        android:padding="12dp"
        android:backgroundTint="@color/custom_color"
        android:textColor="@android:color/white"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="70dp"
        android:layout_marginEnd="70dp" />

</LinearLayout>
